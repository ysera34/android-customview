<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.combinehexagonview.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.example.android.combinehexagonview.HexagonFilterView
            android:id="@+id/hexagon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.example.android.combinehexagonview.HexagonFilterView
            android:id="@+id/hexagon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.example.android.combinehexagonview.HexagonFilterView
            android:id="@+id/hexagon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.example.android.combinehexagonview.HexagonFilterView
            android:id="@+id/hexagon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.example.android.combinehexagonview.HexagonFilterView
            android:id="@+id/hexagon5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
